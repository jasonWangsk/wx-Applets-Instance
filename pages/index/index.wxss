/* banner 样式 */
.banner{width: 100%; height: 300rpx;}
.banner  swiper{height: 100%; width: 100%;}
.banner image{width: 100%; height: 300rpx;}
/* 使用 display inline-block属性 */
.majorCon{white-space: nowrap; padding: 30rpx 0;}
.major .box{text-align: center; width: 165rpx; display: inline-block;}
.major .box image{width: 91rpx; height: 91rpx;}
/* 文字和图片间隔  margin-top: 10rpx; */
.major .txt{font-size: 26rpx; margin-top: 10rpx;}

/* 学员作品模块 内容 样式 布局 */
.works{background: #f0f3f8; padding: 60rpx 0 60rpx;}

.pubTitle{display: flex; justify-content: space-between; height: 60rpx; margin-bottom: 45rpx;}
.pubTitle .txt{font-size: 33rpx; height: 100%; position: relative; padding-left: 20rpx;}

/* 定义作品列表样式 */
.pubTitle .txt::before{display: block; width: 8rpx; height: 34rpx; background: #d80b07; content: ""; position: absolute; left: 0; top: 50%; margin-top: -25rpx;}
.pubTitle .more{font-size: 32; color: #666666;}

/* 作品列表样式 */
.wkMain{display: flex; flex-wrap: wrap; justify-content: space-between; padding: 0 5rpx;}
.wkMain .box{width: 370rpx; height: 214rpx; margin-bottom: 10rpx; position: relative;}
.wkMain .pic{width: 100%; height: 100%;}
/* 遮罩层样式 */
.wkMain .ceng{width: 100%; height: 100%; background-color: rgba(0,0,0,0.1); position: absolute;top: 0; left: 0;color: #ffffff; 
  display: flex; flex-direction: column;justify-content: center;align-items: center;}
/* 遮罩 内文本样式 */
.wkMain.ceng.tit{font-size: 34rpx;}
.wkMain.ceng.des{opacity: 0.6;text-transform: uppercase; font-size: 25rpx;letter-spacing: 5rpx;}

/* 行业动态列表 样式 */
.hangye{padding: 90rpx 0 70rpx;}
/* .dyMain{padding: 0 5rpx;} */
.dyItem{display: flex; padding: 15rpx 0; border: 1rpx dashed #eee; justify-content: space-between;}
.dyItem .pic{width: 230rpx; height: 150rpx;}
.dyItem .pic image{ height: 150rpx; width: 270rpx;}
/* .dyItem .pic image{ height: 150rpx; width: 230rpx;} */
.dyItem .text{width: 440rpx; display: flex; flex-direction: column; justify-content: space-between;} 
.dyItem .title{font-size: 30rpx;}
.dyItem .info{font-size: 23rpx; color: #888888;}
.dyItem .info.text{font-size: 22rpx;}

